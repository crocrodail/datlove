{% extends 'base.html.twig' %}

{% block title %}Hello ProfilMofifierController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% for photo in my_photos %}
    <img style="max-width: 200px; max-height: 200px" src="../../{{photo['url']}}" alt="profil picture">
{% endfor %}
<div class="container-md center">
  {{ form_start(photos, {'action': path('profil_image'), 'method': 'POST'}) }}
    <h2>Add photos</h2>
    <div class="form-group">
      {{ form_row(photos.url, {
        attr: {'class': 'form-control'},
        label: "Photo"
      }) }}
    </div>
    <button type="submit" class="btn btn-primary">save</button>
  {{ form_end(photos) }}
</div>

<div class="container-md center">
  <h2>Change profil info</h2>
  {{ form_start(profil) }}
      <div class="form-group">
      {{ form_row(profil.name, {
        attr: {'class': 'form-control'}
      }) }}
      </div>
      <div class="form-group">
      {{ form_row(profil.age, {
        attr: {'class': 'form-control'}
      }) }}
      </div>
      <div class="form-group">
      {{ form_row(profil.bio, {
        attr: {'class': 'form-control'}
      }) }}
      </div>
      <div class="form-group">
      {{ form_row(profil.job, {
          label: 'MÃ©tier',
          attr: {'class': 'form-control'}
      }) }}
      </div>
      <div class="form-group">
      {{ form_row(profil.city, {
          label: 'Ville',
          attr: {'class': 'form-control'}
      }) }}
      </div>

      <button type="submit" class="btn btn-primary">save</button>
  {{ form_end(profil) }}
</div>
{% endblock %}
